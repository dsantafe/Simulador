@model Simulador.BL.DTOs.InputDTO

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<form action="/Simulador/Create" method="post">

    <div class="form-row">
        <div class="col-md-3">
            @Html.LabelFor(m => m.ValorPrestamo)
            @Html.EditorFor(m => m.ValorPrestamo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Valor Prestamo", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.ValorPrestamo, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3">
            @Html.LabelFor(m => m.Tasa)
            @Html.EditorFor(m => m.Tasa, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tasa", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Tasa, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3">
            @Html.LabelFor(m => m.Plazo)
            @Html.EditorFor(m => m.Plazo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Plazo", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Plazo, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3">
            @Html.LabelFor(m => m.ValorSeguro)
            @Html.EditorFor(m => m.ValorSeguro, new { htmlAttributes = new { @class = "form-control", @placeholder = "Valor Seguro", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.ValorSeguro, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-12">
            <br />
            <input type="submit" name="btnCreate" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>
